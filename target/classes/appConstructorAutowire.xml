<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

<bean id="person" class="com.springcore.entity.Person" autowire="constructor">
<constructor-arg name="id" value="21"/>
<constructor-arg name="name" value="bhavna"/>
</bean>

<bean id="address" class="com.springcore.entity.Address">
<property name="addid" value="101"></property>
<property name="city" value="badodra"></property>
</bean>
</beans>
